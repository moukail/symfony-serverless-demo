{% extends 'bootstrap_5_layout.html.twig' %}

{% block album_row %}
    <h2 class="accordion-header" id="flush-heading{{ form.vars.name }}">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse{{ form.vars.name }}" aria-expanded="false" aria-controls="flush-collapse{{ form.vars.name }}">
            Accordion Item
        </button>
    </h2>
    <div id="flush-collapse{{ form.vars.name }}" class="accordion-collapse collapse" aria-labelledby="flush-heading{{ form.vars.name }}" data-bs-parent="#accordionFlushExample">
        <div class="accordion-body">
            <div>
                <button type="button" class="btn btn-primary add_item_link" data-collection-holder-class="albums">Add</button>
            </div>
            {{ form_row(form.title) }}
            {{ form_row(form.description) }}
            {{ form_row(form.album_cover) }}
        </div>
    </div>
{% endblock %}

{% block _artist_albums_widget %}
    <div>
        <button type="button" class="btn btn-primary add_item_link" data-collection-holder-class="albums">Add</button>
    </div>
    <div class="albums accordion accordion-flush" id="accordionFlushExample"
         data-index="{{ form|length > 0 ? form|last.vars.name + 1 : 0 }}"
         data-prototype="{{ form_row(form.vars.prototype)|e('html_attr') }}"
    ></div>

{% endblock %}

{% block file_widget %}
    {{ block('form_widget') }}
    {% if image_url is defined and image_url is not null %}
        <img src="{{ asset(image_url) }}"/>
    {% endif %}
{% endblock %}
